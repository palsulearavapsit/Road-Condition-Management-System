{
  "expo": {
    "name": "CrackX",
    "slug": "crackx-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "jsEngine": "hermes",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CrackX needs your location to accurately report road damages and route complaints to the correct municipal zone.",
        "NSCameraUsageDescription": "CrackX needs camera access to capture photos of road damages.",
        "NSPhotoLibraryUsageDescription": "CrackX needs access to your photo library to select damage photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.crackx.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CrackX needs your location to accurately report road damages and route complaints to the correct municipal zone."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "CrackX needs access to your photo library to select damage photos."
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.mapbox.** { *; }\n-keep class com.rnmapbox.** { *; }\n-dontwarn com.mapbox.**"
          }
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "ae7e3c34-2f16-4960-9f71-5a8b907fda1a"
      }
    },
    "owner": "aravpalsule"
  }
}